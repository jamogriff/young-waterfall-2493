<h1><%= @movie.title %></h1>

<%= form_with url: "/movies/#{@movie.id}", local: true, method: :post do |f| %>
  <%= f.label :actor_name %>
  <%= f.text_field :actor_name %>
  <%= f.submit "Submit" %>
<% end %>
<h3>Actors:</h3>
<ul>
  <%= @movie.actors.each do |act| %>
    <li><%= act.name %></li>
  <% end %>
</ul>
